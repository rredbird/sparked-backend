<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - Hallo - %msg%n"/>
    </Console>

    <Console name="Error" target="SYSTEM_ERR">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - Error - %msg%n"/>
    </Console>

    <File name="FileAppender" fileName="logs/log.log">
        <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - File - %msg%n"/>
    </File>
  </Appenders>

  <Loggers>
    <Root level="warn">
      <AppenderRef ref="FileAppender" />
    </Root>

    <Logger name="coda.shared" level="trace">
    </Logger>
  </Loggers>
</Configuration>